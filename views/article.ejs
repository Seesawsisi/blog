  				<h4 class="author_id"><%- post.name %></h4>
  			</div>
  		  	<div class="article_content pull-left pos-rela">
				<% if (user && (user.name == post.name)) { %>
					<a class="edit pos-abso" href="/edit/<%= post.name %>/<%= post.time.day %>/<%= post.title %>" title="编辑">
						<span class="glyphicon glyphicon-edit"></span>
					</a>
					<a class="remove pos-abso" href="/remove/<%= post.name %>/<%= post.time.day %>/<%= post.title %>" title="删除">
						<span class="glyphicon glyphicon-remove-circle"></span>
					</a>
				<% } %>
				<% var flag = 1 %>
  		          <% if (user && (user.name != post.name)) { %>
  		            <% if ((post.reprint_info.reprint_from != undefined) && (user.name == post.reprint_info.reprint_from.name)) { %>
  		              <% flag = 0 %>
  		            <% } %>
