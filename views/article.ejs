  		              <% post.reprint_info.reprint_to.forEach(function (reprint_to, index) { %>
  		                <% if (user.name == reprint_to.name) { %>
  		                  <% flag = 0 %>
  		                <% } %>
  		              <% }) %>
  		            <% } %>
  		          <% } else { %>
  		            <% flag = 0 %>
  		          <% } %>
  		          <% if (flag) { %>
  		            <span><a class="edit" href="/reprint/<%= post.name %>/<%= post.time.day %>/<%= post.title %>">转载</a></span>
  		          <% } %>
