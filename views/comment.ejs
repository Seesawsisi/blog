<% post.comments.forEach(function (comment, index) { %>
<div class="commented pos-rela">
	<a class="comment_head pos-abso"><img src="<%= comment.head %>"/></a>
	<p><%- comment.content %></p>
    <p>
		<a href="<%= comment.website %>"><%= comment.name %></a>
		<span class="info"> 回复于 <%= comment.time %></span>
	</p>  
</div>
<% }) %>
<div class="comment">
	<form method="post" class="form-inline" rola="form">
	<% if (user) { %>
		<div class="form-group">
			<label class="sr-only" for="name">名</label>
			<input type="text" class="form-control" name="name" value="<%= user.name %>" placeholder="用户名"/>
		</div>
		<div class="form-group">
			<label class="sr-only" for="email">名</label>
			<input type="email" class="form-control" name="email" value="<%= user.email %>" placeholder="邮箱"/>
		</div>
	<% } else { %>
		<div class="form-group">
			<label class="sr-only" for="name">名</label>
			<input type="text" class="form-control" name="name" placeholder="用户名"/>
		</div>
		<div class="form-group">
			<label class="sr-only" for="email">名</label>
			<input type="email" class="form-control" name="email" placeholder="邮箱"/>
		</div>
	<% } %>
		<textarea name="content" class="form-control textarea" rows="3"></textarea><br />
		<div class="clearfix">
			<input type="submit" class="btn btn-primary pull-right" value="留言" />
		</div>
	</form>
</div>
