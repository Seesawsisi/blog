<!DOCTYPE html>
<html>
  <% include head %>
  <body>
  	<div class="navbar navbar-fixed-top">
  		<div class="navbar-inner">
  			<div class="container">
  				<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
  					<span class="icon-bar"></span>
  					<span class="icon-bar"></span>
  					<span class="icon-bar"></span>
  				</a>
  				<div class="nav-collapse">
  					<ul class="nav">
  						<li class="active">
  							<a href="/">首页</a>
  						</li>
  					<% if (user) { %>
  						<li>
  							<a href="/post">发布</a>
  						</li>
  						<li>
  							<a href="/"><%= user.name %></a>
  						</li>
  						<li>
  							<a href="/logout">登出</a>
  						</li>
  						<li>
  							<a href="/upload">上传文件</a>
  						</li>
  					<% } else { %>
  						<li>
  							<a href="/login">登录</a>
  						</li>
  						<li>
  							<a href="/reg">注册</a>
  						</li>
  					<% } %>
  					</ul>
  				</div>
  			</div>
  		</div>
  	</div>
  	<div id="container" class="container">
  		<form method="post" class="form-horizontal">
            <fieldset>
                <div class="control-group">
                    <label for="title" class="control-label">标题</label>
                    <div class="controls">
                        <input type="text" id="title" value="<%= post.title %>" class="input-xlarge" disabled="disabled" name="title">
                    </div>
                </div>
                <div class="control-group">
                    <label  class="control-label">标签</label>
                    <div class="controls">
                        <input type="text" name="tag1" value="<%= post.tags[0] %>" disabled="disabled" />
                        <input type="text" name="tag2" value="<%= post.tags[1] %>" disabled="disabled" />
                        <input type="text" name="tag3" value="<%= post.tags[2] %>" disabled="disabled" />
                    </div>
                </div>
                <div class="control-group">
                    <label for="post" class="control-label">内容</label>
                    <div class="controls">
                        <textarea  id="post" rows="20" cols="100" name="post"><%= post.post %></textarea>
                    </div>
                </div>
                <div class="control-group">
                    <div class="controls">
                      <button class="btn" type="submit">保存修改</button>
                    </div>
                </div>
            </fieldset>
        </form>
  		<% include footer %>
  	</div>
  </body>
</html>