<!DOCTYPE html>
<html>
  <% include head %>
  <body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <div class="nav-collapse">
                    <ul class="nav">
                        <li>
                            <a href="/">首页</a>
                        </li>
                        <li class="active">
                            <a href="/post">发布</a>
                        </li>
                        <li>
                            <a href="/"><%= user.name %></a>
                        </li>
                        <li>
                            <a href="/logout">登出</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="container" class="container">
        <form method="post" class="form-horizontal">
            <fieldset>
                <div class="control-group">
                    <label for="title" class="control-label">标题</label>
                    <div class="controls">
                        <input type="text" id="title" class="input-xlarge" name="title">
                    </div>
                </div>
                <div class="control-group">
                    <label  class="control-label">标签</label>
                    <div class="controls">
                        <input type="text" name="tag1" /><input type="text" name="tag2" /><input type="text" name="tag3" />
                    </div>
                </div>
                <div class="control-group">
                    <label for="post" class="control-label">内容</label>
                    <div class="controls">
                        <textarea  id="post" rows="20" cols="100" name="post"></textarea>
                    </div>
                </div>
                <div class="control-group">
                    <div class="controls">
                      <button class="btn" type="submit">发布</button>
                    </div>
                </div>
            </fieldset>
        </form>
        <% include footer %>
    </div>
  </body>
</html>