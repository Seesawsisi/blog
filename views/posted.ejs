<!DOCTYPE html>
<html>
	<head>
		<% include head %>
		<link rel="stylesheet" href="/stylesheets/post.css"/>
	</head>
	<body>
		<div class="posted">
			<div class="navbar navbar-default navbar-fixed-top" role="navigation">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-9">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
				</div>
				<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-9">
					<ul class="nav navbar-nav">
						<li>
							<a href="/" class="home pos-abso" title="返回首页"><span class="glyphicon glyphicon-home"></span></a>
						</li>
						<li>
							<a href="/post" title="发布文章"><span class="glyphicon glyphicon-pencil"></span></a>
						</li>
						<li class="active">
							<a href="/posted/<%= user.name %>" title="个人文章中心"><span class="glyphicon glyphicon-th-list"></span></a>
						</li>
					</ul>
					<ul class="nav navbar-nav navbar-right">
						<li>
							<a href="/u/<%= user.name %>" class="user_head" title="<%= user.name %>">
								<img src="<%= user.head %>" alt="<%= user.name %>">
							</a>
						</li>
						<li class="navbar-right">
							<a href="/logout"><span class="glyphicon glyphicon-log-out"></span></a>
						</li>
					</ul>
				</div>
			</div>
			<div class="posted-list clearfix">
			<% if (arrayId !== 0) { %>
				<div class="list pull-left">
					<div id="list" class="pull-right wtf">
						<div class="list-head">
							<span>所有文章</span>
							<a href="/post" class="pull-right"><span class="glyphicon glyphicon-plus"></span></a>
						</div>
						<% var active; %>
						<% arrayId.forEach(function(id, index){ %>
							<% if (index === 0) {active=' active'} else {active = ''} %>
						<div class="title-item<%= active %>">
							<div class="article-btn" href="javascript:;" data-name="<%= user.name %>" data-id="<%= id._id %>">
								<p class="p1"><%= id.title %></p>
								<p class="p2">发表于：<%= id.time.minute %></p>    
							</div>
						</div>
						<% }) %>
					</div>
				</div>
				<div class="content pull-left pos-rela">
					<div style="height: 100%;width: 100%;" class="wtf pos-rela">
						<div class="matte-head pos-abso"></div>
						<div class="content-head pos-abso clearfix">
							<div class="pull-left">
								<div class="posted_comment">
									<a class="posted_comments" href="javascript:;">
									</a>
								</div>
							</div>
							<div class="pull-right">
								<span class="glyphicon glyphicon-cog set" data-toggle="popover"></span>  
							</div>
						</div>
						<div id="content">
							<div class="article">
								<h2 class="txt-center"><%= post.title %></h2>
								<%- post.post %>
							</div>
						</div>
					</div>
				</div>
				<input type="hidden" class="hidden" value="<%= post._id %>" />
			</div>
		<% } else { %>
			<p class="txt-center">你还没发布过文章</p>
		<% } %>
		</div>		
		<script src="/javascripts/jquery-2.0.3.min.js"></script>
		<script src="/javascripts/bootstrap.js"></script>
		<script src="/javascripts/help.js"></script>
		<script src="/javascripts/userAll.js"></script>
	</body>
</html>
