<!DOCTYPE html>
<html>
  <% include head %>
  <body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <div class="nav-collapse">
                    <ul class="nav">
                        <li>
                          <a href="/">首页</a>
                        </li>
                      <% if (user) { %>
                        <li>
                          <a href="/post">发布</a>
                        </li>
                        <li>
                          <a href="/logout">登出</a>
                        </li>
                        <li class="active">
                          <a href="/reg">注册</a>
                        </li>
                      <% } else { %>
                        <li>
                          <a href="/login">登录</a>
                        </li>
                        <li class="active">
                          <a href="/reg">注册</a>
                        </li>
                      <% } %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="container" class="container">
        <form method="post" class="form-horizontal">
            <fieldset>
                <legend>注册</legend>
                <div class="control-group">
                    <label for="username" class="control-label">用户名</label>
                    <div class="controls">
                        <input type="text" id="username" class="input-xlarge" name="username">
                        <p class="help-block">你的账户名称，用于登录和显示。</p>
                    </div>
                </div>
                <div class="control-group">
                    <label for="password" class="control-label">口令</label>
                    <div class="controls">
                        <input type="password" id="password" class="input-xlarge" name="password">
                    </div>
                </div>
                <div class="control-group">
                    <label for="password-repeat" class="control-label">重复输入口令</label>
                    <div class="controls">
                        <input type="password" id="password-repeat" class="input-xlarge" name="password-repeat">
                    </div>
                </div>
                <div class="control-group">
                    <label for="email" class="control-label">邮箱</label>
                    <div class="controls">
                        <input type="email" id="email" class="input-xlarge" name="email">
                    </div>
                </div>
                <div class="form-actions">
                    <button class="btn" type="submit">注册</button>
                </div>
            </fieldset>
        </form>        
        <% include footer %>
    </div>
  </body>
</html>